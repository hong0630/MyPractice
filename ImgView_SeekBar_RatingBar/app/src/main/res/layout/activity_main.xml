<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/ivIdFlow"
        android:layout_width="wrap_content"
        android:layout_height="234dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/ivContDesc"
        app:srcCompat="@drawable/flow01" />

    <TextView
        android:id="@+id/tvIdCurrPhoNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btIdPrev"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/btPtPrev" />

        <Button
            android:id="@+id/btIdNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btPtNext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tbIdSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tvPtAlp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <SeekBar
            android:id="@+id/sbIdAlp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="100" />

    </LinearLayout>
</LinearLayout>